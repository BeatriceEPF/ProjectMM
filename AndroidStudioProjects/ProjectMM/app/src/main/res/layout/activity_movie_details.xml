<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MovieDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/details_movie_back_drop_imageview"
                android:layout_width="512dp"
                android:layout_height="288dp"
                android:layout_marginTop="0dp"
                android:scaleX="1.5"
                android:scaleY="1.5"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/details_movie_runtime_textview"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="200dp"
                android:text="DurÃ©e"
                android:fontFamily="@font/titan_one"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/details_movie_genre_textview"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="130dp"
                android:text="Genre"
                android:fontFamily="@font/titan_one"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/details_movie_title_textview"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/titan_one"
                android:text="Titre"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/details_movie_poster_imageview"
                android:layout_width="136dp"
                android:layout_height="203dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="130dp"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <TextView
                android:id="@+id/details_movie_type_textview"
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="240dp"
                android:text="Type"
                android:fontFamily="@font/titan_one"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/details_movie_overview_textview"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="350dp"
                android:text="Overview" />

            <TextView
                android:id="@+id/details_movie_details_textview"
                android:layout_width="350dp"
                android:layout_height="85dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="480dp"
                android:text="Details"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="600dp"
                android:text="@string/recommended_movies" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recommended_movie_list_item"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="630dp"
                android:layout_marginBottom="100dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="900dp"
                android:text="@string/similar_movies" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/similar_movie_list_item"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="930dp"
                android:layout_marginBottom="70dp" />

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemIconTint="@color/menu_items"
        app:itemTextColor="@color/menu_text"
        app:menu="@menu/menu_bottom_nav" />

</RelativeLayout>