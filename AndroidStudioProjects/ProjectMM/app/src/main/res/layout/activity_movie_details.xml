<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailsActivity">

<!--    TODO constarints-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <Switch
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="15dp"
            android:text="Favorite"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/details_movie_back_drop_imageview"
            android:layout_width="789dp"
            android:layout_height="444dp"
            android:scaleX=".5"
            android:scaleY=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/QR_code_button"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/QR_code_button"
            android:layout_width="64dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/text_menuButton_QRCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_qr_code_scanner_24" />

        <TextView
            android:id="@+id/details_movie_genre_textview"
            android:layout_width="206dp"
            android:layout_height="60dp"
            android:layout_marginEnd="8dp"
            android:text="Genre"
            app:layout_constraintEnd_toEndOf="@+id/details_movie_back_drop_imageview"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_runtime_textview" />

        <TextView
            android:id="@+id/details_movie_type_textview"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="4dp"
            android:text="Type"
            app:layout_constraintEnd_toEndOf="@+id/details_movie_back_drop_imageview"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_title_textview" />

        <TextView
            android:id="@+id/details_movie_runtime_textview"
            android:layout_width="201dp"
            android:layout_height="58dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:text="Durée"
            app:layout_constraintEnd_toEndOf="@+id/details_movie_back_drop_imageview"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_type_textview" />

        <TextView
            android:id="@+id/details_movie_title_textview"
            android:layout_width="193dp"
            android:layout_height="63dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="97dp"
            android:text="Titre"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/details_movie_back_drop_imageview" />

        <ImageView
            android:id="@+id/details_movie_poster_imageview"
            android:layout_width="296dp"
            android:layout_height="444dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="7dp"
            android:scaleX=".5"
            android:scaleY=".5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_title_textview"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/details_movie_overview_textview"
            android:layout_width="349dp"
            android:layout_height="127dp"
            android:layout_marginStart="21dp"
            android:layout_marginTop="13dp"
            android:text="Overview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_poster_imageview" />

        <TextView
            android:id="@+id/details_movie_details_textview"
            android:layout_width="347dp"
            android:layout_height="85dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="24dp"
            android:text="Détails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_overview_textview" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/movie_list_item"
            android:layout_width="326dp"
            android:layout_height="218dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="588dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_movie_details_textview" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>